{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false
  },
  "include": [
    "server/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
